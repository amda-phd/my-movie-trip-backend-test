{
  "name": "my-movie-trip",
  "version": "1.0.0",
  "description": "Access some scenes via a REST API",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "local": "env-cmd -f ./config/local.env nodemon src/index.js",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand --detectOpenHandles",
    "postinstall": "link-module-alias"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amda-phd/express-boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "javascript",
    "api",
    "rest"
  ],
  "author": "amda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amda-phd/express-boilerplate/issues"
  },
  "homepage": "https://github.com/amda-phd/express-boilerplate#readme",
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "jest": "^26.6.3",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "sequelize": "^6.6.5"
  },
  "_moduleAliases": {
    "Models": "src/models",
    "Routers": "src/routers",
    "@DB": "src/db/mysql.js"
  }
}
